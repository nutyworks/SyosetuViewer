<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    
    <data>
        
        <variable
            name="position"
            type="Integer" />

        <variable
            name="viewModel"
            type="me.nutyworks.syosetuviewerv2.ui.novellist.NovelListViewModel" />
    </data>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">
        
        <TextView
            android:text="@{viewModel.selectedNovelBodies[position].translatedBody}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        
    </LinearLayout>

</layout>